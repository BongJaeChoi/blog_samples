<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidhuman.example.kotlinandroidextensions">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ExtensionActivity"
            android:label="@string/activity" />

        <activity
            android:name=".ExtensionFragmentActivity"
            android:label="@string/fragment" />

        <activity
            android:name=".ExtensionRecyclerViewActivity"
            android:label="@string/recycler_view" />
    </application>

</manifest>