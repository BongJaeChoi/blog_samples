<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidhuman.example.kotlinandroidextensions.MainActivity">

    <Button
        android:text="@string/activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_activity_main_activity"
        android:freezesText="false"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:text="@string/fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_activity_main_fragment"
        app:layout_constraintLeft_toLeftOf="@+id/btn_activity_main_activity"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_main_activity"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_activity_main_activity" />

    <Button
        android:text="@string/recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_activity_main_recyclerview"
        app:layout_constraintLeft_toLeftOf="@+id/btn_activity_main_fragment"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_main_fragment"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_activity_main_fragment" />
</android.support.constraint.ConstraintLayout>
